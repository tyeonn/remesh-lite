<div class='conv-container'>
    <%= link_to "Back to: #{@message.c_title}", conversation_path(@message.conversation_id), class: 'link-convo' %>
    <div class='sub-header-msg'>
        <h2><%= @message.text %></h2>
        <div class='date'>
            <%= @message.sent_date.strftime('%m-%d-%Y')%>
        </div>
        <%= link_to "Create Thought", new_conversation_message_thought_path(@message.conversation_id, @message), class: 'link' %>
    </div>

    <ul>
        <% @sorted_thoughts.each do |t| %>
            <div class='link-block-container'>
                <li><%=t.text%></li>
                <li><%=t.sent_date.strftime('%m-%d-%Y')%></li>
            </div>
        <% end %>
    </ul>
</div>