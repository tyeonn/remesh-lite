<div>
    <h2><%= @conversation.title %></h2>
    <%= @conversation.start_date.strftime('%m-%d-%Y')%>
    <%= link_to "Create Message", new_conversation_message_path(@conversation) %>
    
    <%= render partial: "search_message" %>
    <% if @search_msg %>
        <h3>Searched for: <%= @search_msg[1..-2]%></h3>
    <% end %>

    <ul>
        <% @sorted_msgs.each do |m| %>
            <%= link_to conversation_message_path(@conversation, m) do %>
                <div>
                    <li><%=m.text%></li>
                    <li><%=m.sent_date.strftime('%m-%d-%Y')%></li>
                    <li>Number of Thoughts: <%=m.thoughts.count()%> </li>
                </div>
            <% end %>
        <% end %>
    </ul>
</div>