<div class='conv-container'>
<%= link_to "Back to Conversations", root_path, class: 'link-convo' %>
    <div class='sub-header-msg'>
        <h2><%= @conversation.title %></h2>
        <div class='date'>
            <%= @conversation.start_date.strftime('%m-%d-%Y')%>
        </div>
        <%= link_to "Create Message", new_conversation_message_path(@conversation), class: 'link' %>
        <%= render partial: "search_message" %>
    </div>
    
    <% if @search_msg %>
        <h3>Searched for: <%= @search_msg[1..-2]%></h3>
    <% end %>

    <ul>
        <% @sorted_msgs.each do |m| %>
            <%= link_to conversation_message_path(@conversation, m), class: 'link-block' do %>
                <div class='link-block-container'>
                    <li><%=m.text%></li>
                    <li><%=m.sent_date.strftime('%m-%d-%Y %H:%M %p')%></li>
                    <li>Number of Thoughts: <%=m.thoughts.count()%> </li>
                </div>
            <% end %>
        <% end %>
    </ul>
</div>